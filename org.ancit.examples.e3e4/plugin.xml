<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.ancit.examples.e3e4.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.ancit.examples.e3e4.Perspective"
            id="org.ancit.examples.e3e4.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="org.ancit.examples.e3e4.View"
            id="org.ancit.examples.e3e4.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.ancit.examples.e3e4.view">
         </view>
         <view
               id="org.ancit.examples.e3e4.partdescriptor.e4view"
               minimized="false"
               ratio="0.5f"
               relationship="right"
               relative="org.ancit.examples.e3e4.view">
         </view>
         <view
               id="org.ancit.examples.e3e4.fragments.partdescriptor.e4viewfragment"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.ancit.examples.e3e4.partdescriptor.e4view"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?before=additions">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.ancit.examples.e3e4.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="org.ancit.examples.e3e4.commands.sampleCommand"
                  id="org.ancit.examples.e3e4.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.ancit.examples.e3e4.toolbars.sampleToolbar">
            <command
                  commandId="org.ancit.examples.e3e4.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="org.ancit.examples.e3e4.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.ancit.examples.e3e4.application"
            name="RCP Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="applicationXMI"
               value="org.ancit.examples.e3e4/Application.e4xmi">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.ancit.examples.e3e4.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="org.ancit.examples.e3e4.commands.category"
            id="org.ancit.examples.e3e4.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.ancit.examples.e3e4.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.ancit.examples.e3e4.handlers.E3SampleHandler"
            commandId="org.ancit.examples.e3e4.commands.sampleCommand">
      </handler>
   </extension>

</plugin>
